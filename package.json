{
  "name": "docs2ai",
  "version": "0.1.8",
  "description": "Convert online documentation into AI-ready Markdown context files",
  "type": "module",
  "bin": {
    "docs2ai": "dist/cli.mjs"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "documentation",
    "markdown",
    "ai",
    "context",
    "cli",
    "llm",
    "vibe-coding",
    "cursor",
    "copilot",
    "claude",
    "docs",
    "scraper",
    "turndown",
    "readability"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CharlesGrangerTheveniau/ctxify.git"
  },
  "homepage": "https://github.com/CharlesGrangerTheveniau/ctxify",
  "bugs": {
    "url": "https://github.com/CharlesGrangerTheveniau/ctxify/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@mozilla/readability": "^0.6.0",
    "cheerio": "^1.2.0",
    "citty": "^0.2.0",
    "consola": "^3.4.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "linkedom": "^0.18.12",
    "minisearch": "^7.2.0",
    "ofetch": "^1.5.1",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@types/turndown": "^5.0.6",
    "eslint": "^10.0.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
